# ==============================================================================
# Laravel Application Environment - Generated by docker-local
# Project: {{PROJECT_NAME}}
# ==============================================================================

APP_NAME="{{PROJECT_NAME}}"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://{{PROJECT_NAME}}.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==============================================================================
# Database Configuration
# ==============================================================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE={{PROJECT_NAME}}
DB_USERNAME=laravel
DB_PASSWORD=secret

# PostgreSQL Alternative (uncomment to use)
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE={{PROJECT_NAME}}
# DB_USERNAME=laravel
# DB_PASSWORD=secret

# ==============================================================================
# Session & Cache - IMPORTANT: Unique per project to avoid conflicts
# ==============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX={{PROJECT_NAME}}_

# ==============================================================================
# Redis - IMPORTANT: Each project MUST use different DB numbers
# ==============================================================================
# Redis has 16 databases (0-15). Assign unique ranges per project:
# Project 1: DB 0-2, Project 2: DB 3-5, Project 3: DB 6-8, etc.
# Or use the auto-generated values below based on project hash
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

REDIS_CACHE_DB={{REDIS_CACHE_DB}}
REDIS_SESSION_DB={{REDIS_SESSION_DB}}
REDIS_QUEUE_DB={{REDIS_QUEUE_DB}}

# ==============================================================================
# Laravel Reverb (WebSockets) - Unique per project
# ==============================================================================
REVERB_APP_ID={{REVERB_APP_ID}}
REVERB_APP_KEY={{REVERB_APP_KEY}}
REVERB_APP_SECRET={{REVERB_APP_SECRET}}
REVERB_HOST="{{PROJECT_NAME}}.test"
REVERB_PORT=6001
REVERB_SCHEME=https

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ==============================================================================
# Mail (Mailpit)
# ==============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@{{PROJECT_NAME}}.test"
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================================================
# AWS / MinIO (S3-Compatible Storage)
# ==============================================================================
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_ACCESS_KEY=minio123
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET={{PROJECT_NAME}}
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=http://minio:9000

# ==============================================================================
# Vite
# ==============================================================================
VITE_APP_NAME="${APP_NAME}"

# ==============================================================================
# Optional: Sanctum (API tokens)
# ==============================================================================
SANCTUM_STATEFUL_DOMAINS={{PROJECT_NAME}}.test,localhost

# ==============================================================================
# Optional: Horizon (Queue Dashboard)
# ==============================================================================
HORIZON_PREFIX={{PROJECT_NAME}}_horizon:

# ==============================================================================
# Optional: Telescope (Debug Dashboard)
# ==============================================================================
TELESCOPE_ENABLED=true

# ==============================================================================
# Optional: Pulse (Performance Monitoring)
# ==============================================================================
PULSE_ENABLED=true
PULSE_DOMAIN={{PROJECT_NAME}}.test

# ==============================================================================
# Optional: Whisper ASR (Speech-to-Text) - OpenAI-compatible API
# ==============================================================================
WHISPER_API_URL=http://whisper:8000
WHISPER_TIMEOUT=300
WHISPER_MAX_RETRIES=2
WHISPER_RETRY_DELAY=2000
WHISPER_MODEL=base
