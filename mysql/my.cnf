# ==============================================================================
# MySQL 9.1 Custom Configuration for Laravel Development
# ==============================================================================

[mysqld]
# Charset e Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# InnoDB Settings
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query Cache (desabilitado no MySQL 8+, mas mantido para compatibilidade)
# query_cache_type = 0
# query_cache_size = 0

# Connections
max_connections = 200
max_allowed_packet = 64M
wait_timeout = 28800
interactive_timeout = 28800

# Logging
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow-query.log
long_query_time = 2

# Binary Logging (útil para replicação e debug)
# log_bin = mysql-bin
# binlog_format = ROW
# expire_logs_days = 7

# Performance Schema
performance_schema = ON

# Temp tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Thread pool
thread_cache_size = 16

# Sort buffer
sort_buffer_size = 4M
join_buffer_size = 4M

# Read buffer
read_buffer_size = 2M
read_rnd_buffer_size = 8M

# Table cache
table_open_cache = 4000
table_definition_cache = 2000

# Skip DNS resolution (melhora conexões)
skip-name-resolve = 1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
